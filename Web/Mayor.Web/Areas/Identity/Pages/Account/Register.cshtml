@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="row">
    <div class="col-12">
        <h3 style="font:bold; color:tomato;">
            Create a new account
        </h3>
        <h5 class="text-muted" style="color:tomato;">Make sure to select the proper user type.</h5>
        <hr style="border-top-color: #0CC;margin-right:650px; margin-bottom:30px;" />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="f0">
            <div class="row">
                <div class="col-lg-5 form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="issue-form-lbl"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="issue-form-lbl"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="issue-form-lbl"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="user-type-radios" class="issue-form-lbl">User Type</label>
                        <div class="form-control" id="user-type-radios">
                            <div class="form-row">
                                <div class="col-6">
                                    @Html.RadioButtonFor(model => model.Input.IsCitizen, "true", new { id = "citizen", onclick = "func(1)" })
                                    @Html.Label("citizen", "Citizen")
                                </div>
                                <div class="col-6">
                                    @Html.RadioButtonFor(model => model.Input.IsCitizen, "false", new { id = "institution", onclick = "func(2)" })
                                    @Html.Label("institution", "Institution")
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.IsCitizen" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-5 offset-1 form-group" id="f1">
                    @*<h4 class="issue-form-lbl">Citizen</h4>
                    <hr style="border-top-color: #0CC;" />*@
                    <div class="form-group">
                        <label asp-for="Input.FirstName" class="issue-form-lbl"></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName" class="issue-form-lbl"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Birthdate" class="issue-form-lbl">Birthdate</label>
                        <input asp-for="Input.Birthdate" class="form-control" style="font-family:cursive;" type="date">
                        <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="gender-type-radios" class="issue-form-lbl">Sex</label>
                        <div class="form-control" id="gender-type-radios">
                            <div class="form-row">
                                <div class="col-6">
                                    @Html.RadioButtonFor(model => model.Input.Sex, "false", new { id = "male" })
                                    @Html.Label("male", "Male")
                                </div>
                                <div class="col-6">
                                    @Html.RadioButtonFor(model => model.Input.Sex, "true", new { id = "female" })
                                    @Html.Label("female", "Female")
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Sex" class="text-danger"></span>
                    </div>
                </div>
                <div id="f2" class="col-lg-5 offset-1 form-group">
                    @*<h4 class="issue-form-lbl">Institution</h4>
                    <hr style="border-top-color: #0CC;" />*@
                    <div class="form-group">
                        <label asp-for="Input.Name" class="issue-form-lbl">Name</label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Website" class="issue-form-lbl">Website</label>
                        <input asp-for="Input.Website" class="form-control" />
                        <span asp-validation-for="Input.Website" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="institution-type-radios" class="issue-form-lbl">Institution Type</label>
                        <div class="form-control" id="institution-type-radios">
                            <div class="form-row">
                                <div class="col-6">
                                    @Html.RadioButtonFor(model => model.Input.IsGovernment, "true", new { id = "gov" })
                                    @Html.Label("gov", "Government")
                                </div>
                                <div class="col-6">
                                    @Html.RadioButtonFor(model => model.Input.IsGovernment, "false", new { id = "ngo" })
                                    @Html.Label("ngo", "NGO")
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Input.IsGovernment" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

